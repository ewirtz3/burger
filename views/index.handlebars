<div class="jumbotron text-center">
    <h1>Burger Bonanza!</h1>
    <h3>Add a burger or eat a burger</h3> 
</div>


<div class="container">
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
    <form class="create-form row justify-content-around text-center">
        <div class="form-group col-6">
            <textarea class="row" name="add-burger" id="add-burger" cols="50" rows="5"></textarea>
            <button class="btn btn-info row" type="submit">Submit</button>
            <h3 class="row">Enter a burger you want to eat, then click the Submit button!</h3>
        </div>
    </form>
</div>