<div class="container">
    <h1>Burger Bonanza!</h1>
    <h3>Add a burger or eat a burger</h3>   
</div>

<div class="container">
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each3}}
    </ul>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
    <form class="create-form">
        <div class="form-group">
            <textarea name="add-burger" id="add-burger" cols="30" rows="10"></textarea>
            <button class="btn btn-info" type="submit">Submit</button>
            <h3>Enter a burger you want to eat, then click the Submit button!</h3>
        </div>
    </form>
</div>